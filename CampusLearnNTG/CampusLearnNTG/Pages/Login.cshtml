@page
@model CampusLearnNTG.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="login-container d-flex align-items-center justify-content-center">
    <div class="card login-card shadow-sm">
        <div class="card-body p-5">
            <h4 class="fw-bold text-center mb-2">Welcome Back</h4>
            <p class="text-center text-muted small mb-4">
                Log in to your <strong>CampusLearn</strong> account to continue learning.
            </p>

            <!-- Toggle Buttons -->
            <div class="d-flex justify-content-center mb-4">
                <div class="btn-group" role="group">
                    <button id="studentLoginBtn" class="btn btn-primary active" onclick="switchLogin('student')">Student Login</button>
                    <button id="tutorLoginBtn" class="btn btn-outline-primary" onclick="switchLogin('tutor')">Tutor Login</button>
                </div>
            </div>

            <!-- Student Login Form -->
            <form id="studentLoginForm" method="post" asp-page-handler="StudentLogin">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Student.Email" class="form-control" placeholder="student@example.com" type="email" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Student.Password" class="form-control" placeholder="Enter your password" type="password" required />
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberStudent">
                        <label class="form-check-label" for="rememberStudent">Remember me</label>
                    </div>
                    <a href="#" class="text-decoration-none small">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login as Student</button>
            </form>

            <!-- Tutor Login Form -->
            <form id="tutorLoginForm" method="post" asp-page-handler="TutorLogin" style="display:none;">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Tutor.Email" class="form-control" placeholder="tutor@example.com" type="email" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Tutor.Password" class="form-control" placeholder="Enter your password" type="password" required />
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberTutor">
                        <label class="form-check-label" for="rememberTutor">Remember me</label>
                    </div>
                    <a href="#" class="text-decoration-none small">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login as Tutor</button>
            </form>

            <p class="text-center small mt-4 mb-0">
                Don’t have an account?
                <a href="/Signup" class="text-decoration-none">Create one</a>
            </p>
        </div>
    </div>
</div>

<script>
    function switchLogin(type) {
        const studentBtn = document.getElementById('studentLoginBtn');
        const tutorBtn = document.getElementById('tutorLoginBtn');
        const studentForm = document.getElementById('studentLoginForm');
        const tutorForm = document.getElementById('tutorLoginForm');

        if (type === 'student') {
            studentBtn.classList.add('btn-primary');
            studentBtn.classList.remove('btn-outline-primary');
            tutorBtn.classList.remove('btn-primary');
            tutorBtn.classList.add('btn-outline-primary');

            studentForm.style.display = 'block';
            tutorForm.style.display = 'none';
        } else {
            tutorBtn.classList.add('btn-primary');
            tutorBtn.classList.remove('btn-outline-primary');
            studentBtn.classList.remove('btn-primary');
            studentBtn.classList.add('btn-outline-primary');

            tutorForm.style.display = 'block';
            studentForm.style.display = 'none';
        }
    }
</script>

<style>
    body {
        min-height: 100vh;
    }

    .login-container {
        min-height: 100vh;
    }

    .login-card {
        width: 420px;
        border-radius: 12px;
        background: #fff;
    }

    .btn-group .btn {
        width: 160px;
        font-weight: 500;
    }

    .form-label {
        font-size: 0.875rem;
        font-weight: 500;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.6rem 0.75rem;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

    .form-check-label {
        font-size: 0.85rem;
    }

    .text-muted {
        color: #6b7280 !important;
    }
</style>
