@page "/login"
@model CampusLearnNTG.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<!--
Restfull API Endpoints Examples use this as a gide:
| HTTP Method | Endpoint        | Action                       |
| ----------- | --------------- | ---------------------------- |
| GET         | /api/users      | Retrieve a list of all users |
| GET         | /api/users/{id} | Retrieve a single user       |
| POST        | /api/users      | Create a new user            |
| PUT/PATCH   | /api/users/{id} | Update an existing user      |
| DELETE      | /api/users/{id} | Delete a user                |

E.g. https://localhost:5432/api/users

Verify with Kian Controller Details.
-->
<div class="welcome-section">
    <h2>Welcome Back!</h2>
    <p>We're glad to see you again. Please sign in to continue to CampusLearn.</p>
</div>

<div class="login-container">
    <div class="login-card">
        <div class="login-icon">
            <span class="bi bi-journal-bookmark"></span>
        </div>
        <h2>Welcome Back to CampusLearn</h2>
        <p class="subtitle">Sign in to your account to continue</p>

        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
            <div class="form-group">
                <label>Email</label>
                <InputText class="form-control" bind-Value ="loginModel.Email" placeholder="name@example.com" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <div class="password-row">
                    <InputText class="form-control" bind-Value ="loginModel.Password" type="password" />
                    <a class="forgot-link" href="/forgot-password">Forgot your password?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary login-btn">Sign In</button>
        </EditForm>

        <div class="signup-row">
            <span>Don't have an account?</span>
            <a class="signup-link" href="/signup">Sign Up</a>
        </div>
    </div>
</div>

<style>
    /* -------------------- Login Page -------------------- */
    .welcome-section {
        text-align: center;
        margin-bottom: 2rem;
    }

        .welcome-section h2 {
            color: #2d7ff9;
            margin-bottom: 0.5rem;
        }

        .welcome-section p {
            color: #555;
            font-size: 1rem;
        }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .login-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 2rem;
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    .login-icon {
        font-size: 3rem;
        color: #2d7ff9;
        margin-bottom: 1rem;
    }

    .login-card h2 {
        margin-bottom: 0.5rem;
    }

    .login-card .subtitle {
        color: #888;
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
    }

    .form-group {
        text-align: left;
        margin-bottom: 1.5rem;
    }

        .form-group label {
            font-weight: 500;
            display: block;
            margin-bottom: 0.5rem;
        }

    .password-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .forgot-link {
        font-size: 0.85rem;
        color: #2d7ff9;
        text-decoration: none;
    }

        .forgot-link:hover {
            text-decoration: underline;
        }

    .login-btn {
        width: 100%;
        padding: 0.75rem;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
    }

    .signup-row {
        margin-top: 1.5rem;
        font-size: 0.9rem;
    }

    .signup-link {
        color: #2d7ff9;
        text-decoration: none;
        margin-left: 0.25rem;
    }

        .signup-link:hover {
            text-decoration: underline;
        }

    /* -------------------- Responsive -------------------- */
    media (max-width: 500px) {
        .login-card {
            padding: 1.5rem;
        }

        .password-row {
            flex-direction: column;
            align-items: flex-start;
        }

        .forgot-link {
            margin-top: 0.5rem;
        }
    }
</style>


