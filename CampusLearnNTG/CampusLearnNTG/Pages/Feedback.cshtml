@page
@model CampusLearnNTG.Pages.FeedbackModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Feedback";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="row">
       

        <!-- Main Content -->
        <div class="col-md-10 px-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Feedback</h3>
                <div>
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </div>
            </div>

            <!-- Feedback Card -->
            <div class="card shadow-sm border-0 mx-auto" style="max-width: 650px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Submit Your Feedback</h5>
                    <p class="text-muted small mb-4">
                        We value your opinion! Please share your thoughts and suggestions to help us improve CampusLearn.
                        Your insights are crucial for creating a better learning experience for everyone.
                    </p>

                    <form method="post">
                        <!-- Category Dropdown -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Feedback Category / Course</label>
                            <select asp-for="FeedbackCategory" class="form-select">
                                <option>General Feedback</option>
                                <option>Course Quality</option>
                                <option>Instructor Performance</option>
                                <option>Platform Features</option>
                                <option>Technical Issues</option>
                            </select>
                        </div>

                        <!-- Message -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Your Feedback Message</label>
                            <textarea asp-for="FeedbackMessage" class="form-control" rows="3" placeholder="Write your feedback here..."></textarea>
                        </div>

                        <!-- Rating -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Overall Satisfaction</label>
                            <input type="range" class="form-range" asp-for="Satisfaction" min="1" max="10" />
                        </div>

                        <!-- Anonymous Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="SubmitAnonymously" id="anonymousCheck">
                            <label class="form-check-label" for="anonymousCheck">
                                Submit anonymously
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                Submit Feedback
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Footer -->
            <div class="d-flex justify-content-between text-muted small mt-5 px-3">
                <div>Quick Links</div>
                <div>Support</div>
                <div>Legal</div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
    }

    .nav-link.active {
        color: #2563eb !important;
    }

    .card {
        border-radius: 14px;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

    .form-label {
        color: #333;
    }

    input[type=range]::-webkit-slider-thumb {
        background: #2563eb;
    }

    .form-select:focus,
    .form-control:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.2);
    }
</style>
