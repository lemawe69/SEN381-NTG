@page
@model CampusLearnNTG.Pages.LecturerDashboardModel
@{
    ViewData["Title"] = "Lecturer Dashboard";
}
<!--
Restfull API Endpoints Examples use this as a gide:
| HTTP Method | Endpoint        | Action                       |
| ----------- | --------------- | ---------------------------- |
| GET         | /api/users      | Retrieve a list of all users |
| GET         | /api/users/{id} | Retrieve a single user       |
| POST        | /api/users      | Create a new user            |
| PUT/PATCH   | /api/users/{id} | Update an existing user      |
| DELETE      | /api/users/{id} | Delete a user                |

E.g. https://localhost:5432/api/users

Verify with Kian Controller Details.
-->
<div class="dashboard-container" style="display: flex; min-height: 100vh; background: #fafbfc;">
    <!-- Sidebar -->
    <aside class="dashboard-sidebar" style="width: 220px; background: #fff; border-right: 1px solid #e5e7eb; padding: 2rem 1rem;">
        <h4 style="margin-bottom: 2rem; color: #2d7ff9;">Tutor Menu</h4>
        <nav>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-house-door"></span> Dashboard Home</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-person"></span> My Profile</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-calendar"></span> Session Management</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-upload"></span> Resource Upload</li>
                <li><a asp-page="/TutorTopics">Manage Topics</a></li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-chat-dots"></span> Messaging</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-people"></span> Public Forum</li>
            </ul>
        </nav>
        <div style="margin-top: 2rem; color: #888;">
            <span class="bi bi-gear"></span> Settings
        </div>
        <div style="position: absolute; bottom: 1rem; left: 1rem; color: #b0b0b0; font-size: 0.95rem;">
            CampusLearn
        </div>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-main" style="flex: 1; padding: 2rem;">
        <!-- Top Bar -->
        <div class="dashboard-topbar" style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 1.5rem;">
            <nav style="margin-right: auto;">
                <a href="/" style="margin-right: 2rem;">Home</a>
                <a href="/sighup" style="margin-right: 2rem;">Register</a>
                <a href="#" style="margin-right: 2rem;">Session Management</a>
                <a href="#" style="margin-right: 2rem;">Messages</a>
            </nav>
            <button class="btn btn-outline-danger" style="margin-right: 1rem;">Logout</button>
            <span class="bi bi-person-circle" style="font-size: 1.7rem; color: #2d7ff9;"></span>
        </div>

        <!-- Dashboard Title -->
        <h2 style="color: #2d7ff9; margin-bottom: 0.5rem;">Tutor Dashboard</h2>
        <div style="color: #888; margin-bottom: 2rem;">Welcome back, Dr. Alex Johnson! Here's an overview of your activity.</div>

        <!-- Dashboard Grid -->
        <div class="dashboard-grid" style="display: grid; grid-template-columns: 1.2fr 1fr; gap: 2rem;">
            <!-- Tutor Profile Card -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <div style="display: flex; align-items: center; margin-bottom: 1.5rem;">
                    <div style="width: 80px; height: 80px; border-radius: 50%; background: #eaf0fe; display: flex; align-items: center; justify-content: center; font-size: 2.5rem; color: #2d7ff9; margin-right: 1.5rem;">
                        <span class="bi bi-person"></span>
                    </div>
                    <div>
                        <div style="font-weight: bold; font-size: 1.2rem;">Dr. Alex Johnson</div>
                        <div style="font-size: 0.95rem; color: #888;">Tutor Status: Active</div>
                        <div style="font-size: 0.95rem; color: #888; margin-top: 0.5rem;">
                            Subjects Taught:
                            <span style="background: #eaf0fe; color: #2d7ff9; border-radius: 6px; padding: 2px 8px; margin-left: 0.5rem; font-size: 0.9rem;">Mathematics</span>
                            <span style="background: #eaf0fe; color: #2d7ff9; border-radius: 6px; padding: 2px 8px; margin-left: 0.5rem; font-size: 0.9rem;">Physics</span>
                            <span style="background: #eaf0fe; color: #2d7ff9; border-radius: 6px; padding: 2px 8px; margin-left: 0.5rem; font-size: 0.9rem;">Computer Science</span>
                        </div>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 1rem;">
                    <div>
                        <div style="font-weight: bold; font-size: 1.1rem;">125</div>
                        <div style="font-size: 0.95rem; color: #888;">Students</div>
                    </div>
                    <div>
                        <div style="font-weight: bold; font-size: 1.1rem;">8</div>
                        <div style="font-size: 0.95rem; color: #888;">Courses</div>
                    </div>
                    <div>
                        <div style="font-weight: bold; font-size: 1.1rem;">320</div>
                        <div style="font-size: 0.95rem; color: #888;">Hours</div>
                    </div>
                    <div>
                        <div style="font-weight: bold; font-size: 1.1rem;">4.9/5</div>
                        <div style="font-size: 0.95rem; color: #888;">Rating</div>
                    </div>
                </div>
                <button class="btn btn-outline-primary" style="margin-top: 1rem;">Edit Profile</button>
            </section>

            <!-- Session Management Card -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Session Management</h4>
                <p style="color: #888; font-size: 0.95rem;">Manage your teaching schedule and student appointments.</p>
                <div style="margin-top: 1rem;">
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Algebra I Review</div>
                        <div style="font-size: 0.95rem; color: #888;">Oct 26, 2024 at 10:00 AM with Alice Smith</div>
                    </div>
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Calculus II Prep</div>
                        <div style="font-size: 0.95rem; color: #888;">Oct 27, 2024 at 2:00 PM with Bob Johnson</div>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Data Structures Intro</div>
                        <div style="font-size: 0.95rem; color: #888;">Oct 28, 2024 at 11:00 AM with Charlie Brown</div>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
                    <button class="btn btn-outline-primary">Schedule New Session</button>
                    <a href="#" class="btn btn-link" style="padding: 0;">View All</a>
                </div>
            </section>
        </div>

        <!-- Second Row -->
        <div class="dashboard-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-top: 2rem;">
            <!-- Resource Upload Card -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Resource Upload</h4>
                <p style="color: #888; font-size: 0.95rem;">Share learning materials with your students.</p>
                <div style="margin-top: 1rem;">
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Algebra Worksheet</div>
                        <div style="font-size: 0.95rem; color: #888;">PDF - 2.5 MB</div>
                        <div style="font-size: 0.85rem; color: #b0b0b0;">Oct 24, 2024</div>
                    </div>
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Physics Notes Ch 1</div>
                        <div style="font-size: 0.95rem; color: #888;">DOCX - 1.2 MB</div>
                        <div style="font-size: 0.85rem; color: #b0b0b0;">Oct 23, 2024</div>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Programming Guide</div>
                        <div style="font-size: 0.95rem; color: #888;">PDF - 3.1 MB</div>
                        <div style="font-size: 0.85rem; color: #b0b0b0;">Oct 22, 2024</div>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
                    <button class="btn btn-outline-primary">Upload New</button>
                    <button class="btn btn-link" style="padding: 0;">Manage All</button>
                </div>
            </section>

            <!-- Communication Hub Card -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Communication Hub</h4>
                <p style="color: #888; font-size: 0.95rem;">Stay connected with students and the community.</p>
                <div style="display: flex; flex-direction: column; align-items: center; margin-top: 2rem;">
                    <span class="bi bi-chat-dots" style="font-size: 2.5rem; color: #2d7ff9; margin-bottom: 1rem;"></span>
                    <div style="font-size: 1.5rem; font-weight: bold; color: #2d7ff9;">7</div>
                    <div style="font-size: 0.95rem; color: #888; margin-bottom: 1rem;">Unread Messages</div>
                    <button class="btn btn-primary" style="margin-bottom: 1rem;">View Messages</button>
                    <div style="font-size: 0.95rem; color: #888; text-align: center; margin-bottom: 0.5rem;">
                        Public Forum Activity:<br />
                        <span style="font-weight: bold;">2 new posts</span> in 'General Discussion'
                    </div>
                    <a href="#" class="btn btn-outline-primary">Go to Forum</a>
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer style="margin-top: 3rem; text-align: center; color: #888; font-size: 0.95rem;">
            <div style="margin-bottom: 0.5rem;">
                My Hub &nbsp; | &nbsp; Support &nbsp; | &nbsp; Company
            </div>
            <div>
                <span class="bi bi-facebook" style="margin-right: 0.5rem;"></span>
                <span class="bi bi-twitter" style="margin-right: 0.5rem;"></span>
                <span class="bi bi-instagram" style="margin-right: 0.5rem;"></span>
                <span class="bi bi-linkedin"></span>
            </div>
        </footer>
    </main>
</div>