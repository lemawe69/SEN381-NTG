@page
@model CampusLearnNTG.Pages.TutorDashboardModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tutor Dashboard";
}

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">



        <!-- Main Dashboard -->
        <div class="col-md-9 col-lg-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Tutor Dashboard</h3>
                <div>
                    <button class="btn btn-outline-secondary me-2">Home</button>
                    <button class="btn btn-outline-secondary me-2">My Profile</button>
                    <button class="btn btn-outline-secondary me-2">Messages</button>
                    <button class="btn btn-danger">Logout</button>
                </div>
            </div>

            <p>Welcome back, Dr. @Model.Tutor.FirstName @Model.Tutor.LastName! Here’s an overview of your activity.</p>

            <div class="row g-4">
                <!-- Tutor Profile -->
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                                     class="rounded-circle" width="100" height="100" alt="Tutor">
                            </div>
                            <h5>@Model.Tutor.FirstName @Model.Tutor.LastName</h5>
                            <p class="text-muted mb-1">Tutor Status: @Model.Tutor.Status</p>
                            <div class="mb-2">
                                <span class="badge bg-primary me-1">Mathematics</span>
                                <span class="badge bg-secondary me-1">Physics</span>
                                <span class="badge bg-info text-dark">Computer Science</span>
                            </div>
                            <div class="row mt-3">
                                <div class="col-6 border-end">
                                    <h6>@Model.Tutor.Students</h6>
                                    <small>Students</small>
                                </div>
                                <div class="col-6">
                                    <h6>@Model.Tutor.Courses</h6>
                                    <small>Courses</small>
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="mb-1"><strong>@Model.Tutor.Hours</strong> Hours</p>
                                <p class="mb-0 text-warning">⭐ @Model.Tutor.Rating / 5</p>
                            </div>
                            <button class="btn btn-outline-primary mt-3">Edit Profile</button>
                        </div>
                    </div>
                </div>

                <!-- Session Management -->
                <div class="col-lg-8">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="mb-3">Session Management</h5>
                            <p class="text-muted small">Manage your teaching schedule and student appointments.</p>

                            @foreach (var session in Model.UpcomingSessions)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                    <div>
                                        <strong>@session.Title</strong><br />
                                        <small>@session.Date.ToString("MMM dd, yyyy hh:mm tt") with @session.StudentName</small>
                                    </div>
                                </div>
                            }

                            <div class="d-flex justify-content-between mt-3">
                                <button class="btn btn-outline-primary">Schedule New Session</button>
                                <a href="#" class="btn btn-link">View All</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Resource Upload -->
                <div class="col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="mb-3">Resource Upload</h5>
                            <p class="text-muted small">Share learning materials with your students.</p>

                            @foreach (var file in Model.UploadedResources)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                    <div>
                                        <strong>@file.Title</strong><br />
                                        <small>@file.Type - @file.Size • @file.UploadDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                            }

                            <div class="d-flex justify-content-between mt-3">
                                <button class="btn btn-outline-success btn-sm">Upload New</button>
                                <button class="btn btn-outline-secondary btn-sm">Manage All</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Communication Hub -->
                <div class="col-lg-6">
                    <div class="card shadow-sm h-100 text-center">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="mb-3">Communication Hub</h5>
                            <p>Stay connected with students and the community.</p>
                            <h3 class="text-primary">@Model.UnreadMessages</h3>
                            <p>Unread Messages</p>
                            <a href="/Messages" class="btn btn-primary mb-3">View Messages</a>
                            <p class="small">Public Forum Activity:</p>
                            <p class="fw-bold text-secondary">@Model.ForumActivity</p>
                            <a href="/Forum" class="btn btn-outline-primary btn-sm">Go to Forum</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
