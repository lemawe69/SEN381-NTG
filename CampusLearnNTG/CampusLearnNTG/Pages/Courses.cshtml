@page
@model CampusLearnNTG.Pages.CoursesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Courses";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="row">
        
        <!-- Main Content -->
        <div class="col-md-10 px-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Available Courses</h3>
                <div>
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </div>
            </div>

            <!-- Search and Filter -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="input-group" style="max-width: 350px;">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Search courses..." />
                </div>
                <select class="form-select" style="max-width: 200px;">
                    <option selected>All Subjects</option>
                    <option>Science</option>
                    <option>Arts</option>
                    <option>Mathematics</option>
                    <option>Technology</option>
                </select>
            </div>

            <!-- Course Cards -->
            <div class="row g-4">
                @foreach (var course in Model.Courses)
                {
                    <div class="col-md-4 col-lg-3">
                        <div class="card shadow-sm border-0 h-100">
                            <img src="@course.ImageUrl" class="card-img-top rounded-top" alt="@course.Title" />
                            <div class="card-body d-flex flex-column">
                                <h6 class="fw-semibold">@course.Title</h6>
                                <p class="text-muted small flex-grow-1">@course.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="badge bg-light text-dark border">@course.Level</span>
                                    <div class="text-end">
                                        <button class="btn btn-outline-primary btn-sm me-2">View Details</button>
                                        <button class="btn btn-primary btn-sm">Enroll</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Footer -->
            <div class="d-flex justify-content-between text-muted small mt-5 px-3">
                <div>Quick Links</div>
                <div>Support</div>
                <div>Legal</div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
    }

    .nav-link.active {
        color: #2563eb !important;
    }

    .card {
        border-radius: 14px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        }

    .btn-primary {
        background-color: #2563eb;
        border: none;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

    .form-control:focus,
    .form-select:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.2);
    }
</style>
