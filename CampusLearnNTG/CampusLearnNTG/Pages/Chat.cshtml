@page
@model CampusLearnNTG.Pages.ChatModel
@{
    ViewData["Title"] = "Chatbot";
}

<div class="chat-container" style="max-width: 750px; margin: 2rem auto; font-family: 'Segoe UI', sans-serif;">
    <h2 style="
        text-align: center;
        color: #2563eb;
        margin-bottom: 1.5rem;
        text-shadow: 0 1px 2px rgba(0,0,0,0.15);
    ">
        💬 Chat with LM Studio
    </h2>

  
    <div id="chatWindow" style="
        height: 470px;
        overflow-y: auto;
        border-radius: 16px;
        padding: 1.2rem;
        background: linear-gradient(180deg, #e0f2fe 0%, #ffffff 100%);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border: 1px solid #bfdbfe;
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
        backdrop-filter: blur(4px);
    ">
        <div style="text-align:center; color:#64748b; font-size:0.95rem; margin-top:2rem;">
            🌟 Start chatting with <b>LM Studio</b> below...
        </div>
    </div>

   
    <div style="
        display: flex;
        align-items: center;
        margin-top: 1.2rem;
        background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%);
        border-radius: 40px;
        padding: 0.4rem 1rem;
        box-shadow: 0 3px 10px rgba(37,99,235,0.3);
    ">
        <input type="text"
               id="userInput"
               placeholder="Type your message and press Enter..."
               style="
                flex: 1;
                border: none;
                outline: none;
                font-size: 1rem;
                padding: 0.8rem 1rem;
                border-radius: 30px;
                background: rgba(255,255,255,0.9);
                color: #0f172a;
                font-weight: 500;
                transition: all 0.2s ease;
            "
               onfocus="this.style.background='#fff'; this.style.boxShadow='0 0 0 3px rgba(59,130,246,0.3)'"
               onblur="this.style.background='rgba(255,255,255,0.9)'; this.style.boxShadow='none'" />
        <button id="sendBtn"
                style="
                background: linear-gradient(135deg, #06b6d4, #3b82f6);
                color: white;
                border: none;
                border-radius: 25px;
                padding: 0.6rem 1.2rem;
                cursor: pointer;
                font-weight: 600;
                transition: all 0.25s ease;
                box-shadow: 0 3px 8px rgba(0,0,0,0.15);
            "
                onmouseover="this.style.filter='brightness(1.2)'"
                onmouseout="this.style.filter='brightness(1)'">
            ➤
        </button>
    </div>
</div>

<script src="~/js/chat.js"></script>

<style>
  
    #chatWindow::-webkit-scrollbar {
        width: 10px;
    }

    #chatWindow::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, #3b82f6, #06b6d4);
        border-radius: 5px;
    }

   
    #chatWindow div {
        max-width: 75%;
        padding: 0.8rem 1rem;
        border-radius: 18px;
        line-height: 1.4;
        animation: fadeIn 0.3s ease;
        word-wrap: break-word;
        font-size: 1rem;
    }

       
        #chatWindow div:has(b:contains("You")) {
            align-self: flex-end;
            background: linear-gradient(135deg, #2563eb, #3b82f6);
            color: white;
            box-shadow: 0 2px 6px rgba(37,99,235,0.3);
        }

    
        #chatWindow div:has(b:contains("Bot")) {
            align-self: flex-start;
            background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
            color: #0f172a;
            border-left: 4px solid #06b6d4;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

    
    input:focus {
        box-shadow: 0 0 6px rgba(37,99,235,0.3);
    }

    
    keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
