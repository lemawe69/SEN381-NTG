@page
@model CampusLearnNTG.Pages.StudentDashboardModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Student Dashboard";
}

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container-fluid mt-3">
    <div class="row">
       

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Welcome, @Model.Student.FirstName @Model.Student.LastName!</h3>
                <div>
                    <button class="btn btn-outline-secondary me-2">Home</button>
                    <button class="btn btn-outline-secondary me-2">My Profile</button>
                    <button class="btn btn-outline-secondary me-2">Courses</button>
                    <button class="btn btn-outline-secondary me-2">Messages</button>
                    <button class="btn btn-danger">Logout</button>
                </div>
            </div>

            <div class="row g-4">
                <!-- Profile Card -->
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                                     class="rounded-circle" width="100" height="100" alt="Profile">
                            </div>
                            <h5>@Model.Student.FirstName @Model.Student.LastName</h5>
                            <p class="text-muted mb-1">Student ID: @Model.Student.StudentId</p>
                            <p class="text-success">Status: @Model.Student.Status</p>
                            <div class="progress mt-2">
                                <div class="progress-bar" role="progressbar"
                                     style="width:@Model.Student.Progress%" aria-valuenow="@Model.Student.Progress"
                                     aria-valuemin="0" aria-valuemax="100">
                                    @Model.Student.Progress%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Sessions -->
                <div class="col-lg-8">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="mb-3">Upcoming Sessions</h5>
                            @foreach (var session in Model.UpcomingSessions)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                    <div>
                                        <strong>@session.Title</strong><br />
                                        <small>@session.Instructor - @session.Date.ToString("MMM dd, hh:mm tt")</small>
                                    </div>
                                    <button class="btn btn-primary btn-sm">Join Session</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Learning Materials -->
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="mb-3">Learning Materials</h5>
                            @foreach (var material in Model.LearningMaterials)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                    <div>
                                        <strong>@material.Title</strong><br />
                                        <small>Type: @material.Type</small>
                                    </div>
                                    <a href="#" class="btn btn-outline-primary btn-sm">View</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Recent Messages -->
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="mb-3">Recent Messages</h5>
                            @foreach (var msg in Model.RecentMessages)
                            {
                                <div class="d-flex align-items-start border-bottom py-2">
                                    <div class="flex-grow-1 ms-2">
                                        <strong>@msg.Sender</strong><br />
                                        <small>@msg.Content</small><br />
                                        <span class="text-muted small">@msg.TimeAgo</span>
                                    </div>
                                </div>
                            }
                            <a href="#" class="btn btn-link p-0 mt-2">View All Messages</a>
                        </div>
                    </div>
                </div>

                <!-- Forum -->
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100 text-center">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="mb-3">Community Forum</h5>
                            <p>Engage in discussions, ask questions, and share knowledge.</p>
                            <a href="/Forum" class="btn btn-primary">Go to Forum</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
