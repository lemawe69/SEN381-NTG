    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/chatbot.js"></script>
</head>
<body>
    <div class="wrapper">
        @if (!hideSidebar)
        {
            <aside class="sidebar">
                <h2>CampusLearnNTG</h2>
                <nav>
