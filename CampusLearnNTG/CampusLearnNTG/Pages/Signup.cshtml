@page
@model CampusLearnNTG.Pages.SignupModel
@{
    ViewData["Title"] = "Create Your Account";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="signup-container d-flex align-items-center justify-content-center">
    <div class="card signup-card shadow-sm">
        <div class="card-body p-5">
            <h4 class="fw-bold text-center mb-2">Create Your Account</h4>
            <p class="text-center text-muted small mb-4">
                Join <strong>CampusLearn</strong> as a student or a tutor to start your learning journey.
            </p>

            <!-- Toggle -->
            <div class="d-flex justify-content-center mb-4">
                <div class="btn-group" role="group">
                    <button id="studentBtn" class="btn btn-primary active" onclick="switchForm('student')">Student Sign-Up</button>
                    <button id="tutorBtn" class="btn btn-outline-primary" onclick="switchForm('tutor')">Tutor Sign-Up</button>
                </div>
            </div>

            <!-- Student Form -->
            <form id="studentForm" method="post" asp-page-handler="StudentSignup">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input asp-for="Student.FullName" class="form-control" placeholder="John Doe" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Student.Email" class="form-control" placeholder="john.doe@example.com" type="email" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Student.Password" class="form-control" placeholder="Enter your password" type="password" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input asp-for="Student.ConfirmPassword" class="form-control" placeholder="Confirm your password" type="password" required />
                </div>
                <div class="mb-4">
                    <label class="form-label">Student ID (Optional)</label>
                    <input asp-for="Student.StudentId" class="form-control" placeholder="E.g. CL12345" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Sign Up as Student</button>
            </form>

            <!-- Tutor Form -->
            <form id="tutorForm" method="post" asp-page-handler="TutorSignup" style="display:none;">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input asp-for="Tutor.FullName" class="form-control" placeholder="Jane Smith" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Tutor.Email" class="form-control" placeholder="jane.smith@example.com" type="email" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Tutor.Password" class="form-control" placeholder="Enter your password" type="password" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input asp-for="Tutor.ConfirmPassword" class="form-control" placeholder="Confirm your password" type="password" required />
                </div>
                <div class="mb-4">
                    <label class="form-label">Expertise Area</label>
                    <input asp-for="Tutor.Expertise" class="form-control" placeholder="E.g. Mathematics, Chemistry" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Sign Up as Tutor</button>
            </form>

            <p class="text-center small mt-4 mb-0">
                Already have an account?
                <a href="/Login" class="text-decoration-none">Login</a>
            </p>
        </div>
    </div>
</div>

<script>
    function switchForm(type) {
        const studentBtn = document.getElementById('studentBtn');
        const tutorBtn = document.getElementById('tutorBtn');
        const studentForm = document.getElementById('studentForm');
        const tutorForm = document.getElementById('tutorForm');

        if (type === 'student') {
            studentBtn.classList.add('btn-primary');
            studentBtn.classList.remove('btn-outline-primary', 'active');
            tutorBtn.classList.remove('btn-primary');
            tutorBtn.classList.add('btn-outline-primary');

            studentForm.style.display = 'block';
            tutorForm.style.display = 'none';
        } else {
            tutorBtn.classList.add('btn-primary');
            tutorBtn.classList.remove('btn-outline-primary', 'active');
            studentBtn.classList.remove('btn-primary');
            studentBtn.classList.add('btn-outline-primary');

            tutorForm.style.display = 'block';
            studentForm.style.display = 'none';
        }
    }
</script>

<style>
    body {
        min-height: 100vh;
    }

    .signup-container {
        min-height: 100vh;
    }

    .signup-card {
        width: 420px;
        border-radius: 12px;
        background: #fff;
    }

    .btn-group .btn {
        width: 160px;
        font-weight: 500;
    }

    .form-label {
        font-size: 0.875rem;
        font-weight: 500;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.6rem 0.75rem;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }
</style>
