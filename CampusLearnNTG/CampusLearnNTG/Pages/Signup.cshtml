@page "/signup"
@model CampusLearnNTG.Pages.SignupModel
@{
    ViewData["Title"] = "Signup";
}
<!--
Restfull API Endpoints Examples use this as a gide:
| HTTP Method | Endpoint        | Action                       |
| ----------- | --------------- | ---------------------------- |
| GET         | /api/users      | Retrieve a list of all users |
| GET         | /api/users/{id} | Retrieve a single user       |
| POST        | /api/users      | Create a new user            |
| PUT/PATCH   | /api/users/{id} | Update an existing user      |
| DELETE      | /api/users/{id} | Delete a user                |

E.g. https://localhost:5432/api/users

Verify with Kian Controller Details.
-->
<div class="signup-container">
    <div class="welcome-section">
        <h1>Welcome to CampusLearn</h1>
        <p>We're glad to have you here! Join CampusLearn as a student or a tutor to start your learning journey.</p>
    </div>

    <div class="signup-card-wrapper">
        <div class="signup-card">
            <h3>Create Your Account</h3>
            <p class="subtitle">
                Join CampusLearn as a student or a tutor to start your learning journey.
            </p>

            <div class="signup-tabs">
                <button class="tab active" id="studentTab">Student Sign-Up</button>
                <button class="tab" id="tutorTab">Tutor Sign-Up</button>
            </div>

            <form>
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" placeholder="John Doe" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="john.doe@example.com" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" placeholder="Enter your password" />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" placeholder="Confirm your password" />
                </div>
                <div class="form-group">
                    <label>Student ID (Optional)</label>
                    <input type="text" placeholder="E.g. CL12345" />
                </div>
                <button type="submit" class="btn-submit">Sign Up as Student</button>
            </form>

            <div class="login-link">
                Already have an account? <a href="/login">Login</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* -------------------- Signup Page -------------------- */
    .signup-container {
        min-height: 100vh;
        background: #f5f6fa;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 2rem;
    }

        .welcome-section h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .welcome-section p {
            font-size: 1rem;
            color: #555;
        }

    .signup-card-wrapper {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .signup-card {
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        width: 400px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

        .signup-card h3 {
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .signup-card .subtitle {
            text-align: center;
            font-size: 0.95rem;
            color: #888;
            margin-bottom: 1.5rem;
        }

    .signup-tabs {
        display: flex;
        margin-bottom: 1.5rem;
        gap: 0.5rem;
    }

        .signup-tabs .tab {
            flex: 1;
            padding: 0.5rem;
            border-radius: 8px;
            border: 1px solid #ccc;
            background: #f5f6fa;
            cursor: pointer;
            transition: all 0.2s;
        }

            .signup-tabs .tab.active {
                background: #2d7ff9;
                color: #fff;
                border-color: #2d7ff9;
            }

    form .form-group {
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
    }

        form .form-group label {
            margin-bottom: 0.3rem;
            font-weight: 500;
        }

        form .form-group input {
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 0.95rem;
        }

    .btn-submit {
        width: 100%;
        background: #2d7ff9;
        color: #fff;
        padding: 0.6rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        margin-top: 1rem;
        font-size: 1rem;
    }

        .btn-submit:hover {
            background: #2565d6;
        }

    .login-link {
        text-align: center;
        font-size: 0.95rem;
        margin-top: 1rem;
    }

        .login-link a {
            color: #2d7ff9;
            text-decoration: none;
        }

            .login-link a:hover {
                text-decoration: underline;
            }
</style>
