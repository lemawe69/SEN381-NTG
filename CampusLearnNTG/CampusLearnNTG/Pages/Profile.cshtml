@page
@model CampusLearnNTG.Pages.ProfileModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="row">
      

        <!-- Main Content -->
        <div class="col-md-10 px-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">User Profile</h3>
                <button class="btn btn-outline-secondary btn-sm"><i class="bi bi-box-arrow-right"></i> Logout</button>
            </div>

            <!-- Profile Overview -->
            <div class="card shadow-sm border-0 mb-4 text-center p-4">
                <div class="avatar-circle mx-auto mb-3">
                    <span class="initials">@Model.UserInitials</span>
                </div>
                <h5 class="fw-bold mb-1">@Model.FullName</h5>
                <p class="text-muted mb-2">@Model.StudentID | Enrolled: @Model.EnrollmentYear</p>
                <p class="text-muted small">@Model.Major</p>
                <button class="btn btn-outline-primary btn-sm mt-2"><i class="bi bi-pencil-square"></i> Edit Profile</button>
            </div>

            <!-- Personal Information -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Personal Information</h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">First Name</label>
                            <input class="form-control" value="@Model.FirstName" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Phone Number</label>
                            <input class="form-control" value="@Model.Phone" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Last Name</label>
                            <input class="form-control" value="@Model.LastName" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Date of Birth</label>
                            <input class="form-control" value="@Model.DOB.ToString("yyyy-MM-dd")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Email</label>
                            <input class="form-control" value="@Model.Email" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Address</label>
                            <input class="form-control" value="@Model.Address" readonly />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Academic Details -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Academic Details</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Major:</strong> @Model.Major</p>
                            <p><strong>Year of Study:</strong> @Model.YearOfStudy</p>
                            <p><strong>Cumulative GPA:</strong> @Model.GPA</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Enrolled Courses</strong>
                            <ul class="mt-2">
                                @foreach (var course in Model.EnrolledCourses)
                                {
                                    <li>@course</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="card shadow-sm border-0 mb-5">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Account Settings</h6>
                    <button class="btn btn-outline-primary btn-sm mb-3"><i class="bi bi-key"></i> Change Password</button><br />
                    <button class="btn btn-outline-secondary btn-sm mb-3"><i class="bi bi-envelope"></i> Manage Email Notifications</button><br />
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="profileVisibility" />
                        <label class="form-check-label" for="profileVisibility">Make Profile Public</label>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="d-flex justify-content-between text-muted small mt-4 px-3">
                <div>Quick Links</div>
                <div>Support</div>
                <div>Legal</div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
    }

    .nav-link.active {
        color: #2563eb !important;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background-color: #2563eb;
        color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 26px;
        font-weight: 600;
    }

    .form-control {
        background-color: #f9fafb;
        border: 1px solid #e5e7eb;
    }

    .card {
        border-radius: 14px;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }
</style>
