@page
@model CampusLearnNTG.Pages.IndexModel
@{
    ViewData["Title"] = "CampusLearn - Home";
}
<div class="DevMode">
    <span>Developer-----></span>
    <a class="signup-link" href="/Shared/Nav">Raw</a>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="#">Campus <span class="text-dark">Learn</span></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav me-3">
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Login?role=student">Student Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/Login?role=tutor">Tutor Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/AdminLogin">Admin Login</a></li>
            </ul>
            <a href="/Signup" class="btn btn-primary rounded-pill px-4">Register</a>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section class="hero-section text-center text-white d-flex align-items-center justify-content-center">
    <div class="overlay"></div>
    <div class="container position-relative">
        <h1 class="fw-bold display-5 mb-3">Welcome to Campus Learn:<br>Your Hub for Collaborative Education</h1>
        <p class="lead text-light mb-4">Unlock your potential with personalized learning experiences, expert tutors, and a vibrant student community.</p>
        <a href="/Signup" class="btn btn-primary btn-lg rounded-pill">Start Your Learning Journey</a>
    </div>
</section>

<!-- Why Choose Section -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-4">Why Choose CampusLearn?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 p-4">
                    <div class="mb-3 text-primary fs-2">
                        <i class="bi bi-journal-check"></i>
                    </div>
                    <h5 class="fw-semibold">Expert-Led Courses</h5>
                    <p class="text-muted">Access a variety of courses taught by certified professionals and educators.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 p-4">
                    <div class="mb-3 text-primary fs-2">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="fw-semibold">Vibrant Community</h5>
                    <p class="text-muted">Connect with peers, collaborate on projects, and engage in discussions to enhance your learning.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 p-4">
                    <div class="mb-3 text-primary fs-2">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h5 class="fw-semibold">Flexible Scheduling</h5>
                    <p class="text-muted">Book one-on-one sessions with tutors on your own terms, designed to fit your busy lifestyle.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Portal Access Section -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold mb-5">Access Your CampusLearn Portal</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100 p-4">
                    <div class="text-primary fs-2 mb-3"><i class="bi bi-person-badge"></i></div>
                    <h5 class="fw-semibold">Student Login</h5>
                    <p class="text-muted small">Access your courses, schedules, and learning materials.</p>
                    <a href="/Login?role=student" class="btn btn-outline-primary mt-3 w-100 rounded-pill">Login as Student</a>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100 p-4">
                    <div class="text-primary fs-2 mb-3"><i class="bi bi-person-video3"></i></div>
                    <h5 class="fw-semibold">Tutor Login</h5>
                    <p class="text-muted small">Manage sessions, upload materials, and connect with your students.</p>
                    <a href="/Login?role=tutor" class="btn btn-outline-primary mt-3 w-100 rounded-pill">Login as Tutor</a>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100 p-4">
                    <div class="text-primary fs-2 mb-3"><i class="bi bi-shield-lock"></i></div>
                    <h5 class="fw-semibold">Admin Login</h5>
                    <p class="text-muted small">Oversee users, moderate content, and configure platform settings.</p>
                    <a href="/AdminLogin" class="btn btn-outline-primary mt-3 w-100 rounded-pill">Login as Admin</a>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="py-4 text-center border-top small text-muted">
    <p class="mb-0">&copy; 2025 CampusLearn. All Rights Reserved.</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        font-family: 'Inter', sans-serif;
        padding-top: 75px;
        background-color: #fff;
    }

    .hero-section {
        position: relative;
        background: url('https://images.unsplash.com/photo-1553877522-43269d4ea984') no-repeat center center/cover;
        height: 70vh;
        color: white;
    }

        .hero-section .overlay {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: rgba(0, 0, 0, 0.55);
        }

        .hero-section .container {
            z-index: 1;
        }

    .card {
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .navbar-brand {
        font-size: 1.5rem;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

    .btn-outline-primary:hover {
        background-color: #2563eb;
        color: white;
    }
</style>
