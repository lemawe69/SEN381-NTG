@page
@model CampusLearnNTG.Pages.ForumModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Public Forum";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="row">
       

        <!-- Forum Main Content -->
        <div class="col-md-7 px-4">
            <h3 class="fw-bold text-primary mb-4">Public Forum:</h3>

            <!-- Search and New Topic -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="input-group w-75">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Search CampusLearn..." />
                </div>
                <button class="btn btn-primary rounded-pill">
                    <i class="bi bi-plus-lg"></i> New Topic
                </button>
            </div>

            <!-- Tabs -->
            <ul class="nav nav-pills mb-3">
                <li class="nav-item"><a class="nav-link active" href="#">All Threads</a></li>
                <li class="nav-item"><a class="nav-link" href="#">My Threads</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Popular</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Unanswered</a></li>
            </ul>

            <!-- Thread Cards -->
            @foreach (var post in Model.Threads)
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="d-flex align-items-center">
                                <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width:35px;height:35px;">
                                    @post.AuthorInitial
                                </div>
                                <div>
                                    <strong>@post.Author</strong>
                                    <small class="text-muted d-block">@post.TimeAgo</small>
                                </div>
                            </div>
                            @if (post.Pinned)
                            {
                                <span class="badge bg-secondary">Pinned</span>
                            }
                        </div>
                        <h5 class="fw-semibold">@post.Title</h5>
                        <p class="text-muted small mb-3">@post.Content</p>
                        <div class="d-flex justify-content-between text-muted small">
                            <div>
                                <i class="bi bi-chat-left-text"></i> @post.Replies Replies
                                <i class="bi bi-eye ms-3"></i> @post.Views Views
                            </div>
                            <span>@post.LastActive</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Sidebar -->
        <div class="col-md-3">
            <div class="sticky-top" style="top: 1rem;">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Trending Topics</h6>
                        <ul class="list-unstyled small">
                            @foreach (var topic in Model.TrendingTopics)
                            {
                                <li class="mb-2"><a href="#" class="text-decoration-none">@topic</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">My Active Threads</h6>
                        <ul class="list-unstyled small">
                            @foreach (var thread in Model.MyThreads)
                            {
                                <li class="mb-2"><a href="#" class="text-decoration-none">@thread</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Quick Post</h6>
                        <textarea class="form-control mb-2" placeholder="What's on your mind, CampusLearner?" rows="3"></textarea>
                        <button class="btn btn-primary w-100 rounded-pill">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
    }

    .nav-link.active {
        background-color: #2563eb !important;
        color: #fff !important;
        border-radius: 20px;
        padding: 6px 15px;
    }

    .avatar {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .card {
        border-radius: 12px;
    }

        .card:hover {
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.07);
            transition: 0.2s ease;
        }

    .btn-primary {
        background-color: #2563eb;
        border: none;
    }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }
</style>
