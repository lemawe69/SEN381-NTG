@page "/admindashboard"

<div class="dashboard-container" style="display: flex; min-height: 100vh; background: #fafbfc;">
    <!-- Sidebar -->
    <aside class="dashboard-sidebar" style="width: 220px; background: #fff; border-right: 1px solid #e5e7eb; padding: 2rem 1rem; position: relative;">
        <h4 style="margin-bottom: 2rem; color: #2d7ff9;">Admin Menu</h4>
        <nav>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-house-door"></span> Dashboard Home</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-people"></span> User Management</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-chat-dots"></span> Content Moderation</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-bar-chart"></span> Platform Analytics</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-gear"></span> Platform Settings</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-bell"></span> Notifications</li>
            </ul>
        </nav>
        <button class="btn btn-outline-danger" style="position: absolute; bottom: 2rem; left: 1rem; width: 80%;">Logout</button>
        <div style="position: absolute; bottom: 1rem; left: 1rem; color: #b0b0b0; font-size: 0.95rem;">
            CampusLearn
        </div>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-main" style="flex: 1; padding: 2rem;">
        <!-- Top Bar -->
        <div class="dashboard-topbar" style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 1.5rem;">
            <nav style="margin-right: auto;">
                <a href="/" style="margin-right: 2rem;">Home</a>
                <a href="#" style="margin-right: 2rem;">User Management</a>
                <a href="#" style="margin-right: 2rem;">Content Moderation</a>
                <a href="#" style="margin-right: 2rem;">Platform Analytics</a>
                <a href="#" style="margin-right: 2rem;">Platform Settings</a>
            </nav>
            <button class="btn btn-outline-danger" style="margin-right: 1rem;">Logout</button>
            <span class="bi bi-person-circle" style="font-size: 1.7rem; color: #2d7ff9;"></span>
        </div>

        <!-- Dashboard Title -->
        <h2 style="color: #2d7ff9; margin-bottom: 0.5rem;">Admin Dashboard:</h2>

        <!-- User Management -->
        <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem; margin-bottom: 2rem;">
            <h4>User Management</h4>
            <p style="color: #888; font-size: 0.95rem;">Manage users and their roles on the platform.</p>
            <table style="width: 100%; margin-top: 1rem; border-collapse: collapse;">
                <thead>
                    <tr style="background: #f5f6fa;">
                        <th style="padding: 0.5rem;">Name</th>
                        <th style="padding: 0.5rem;">Email</th>
                        <th style="padding: 0.5rem;">Role</th>
                        <th style="padding: 0.5rem;">Status</th>
                        <th style="padding: 0.5rem;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="padding: 0.5rem;">Sam Smith</td>
                        <td style="padding: 0.5rem;">sam@campuslearn.com</td>
                        <td style="padding: 0.5rem;">Student</td>
                        <td style="padding: 0.5rem;"><span style="color: #4caf50;">Active</span></td>
                        <td style="padding: 0.5rem;"><a href="#">View</a></td>
                    </tr>
                    <tr>
                        <td style="padding: 0.5rem;">Alex Johnson</td>
                        <td style="padding: 0.5rem;">alex@campuslearn.com</td>
                        <td style="padding: 0.5rem;">Tutor</td>
                        <td style="padding: 0.5rem;"><span style="color: #4caf50;">Active</span></td>
                        <td style="padding: 0.5rem;"><a href="#">View</a></td>
                    </tr>
                    <tr>
                        <td style="padding: 0.5rem;">Ben Carter</td>
                        <td style="padding: 0.5rem;">ben@campuslearn.com</td>
                        <td style="padding: 0.5rem;">Admin</td>
                        <td style="padding: 0.5rem;"><span style="color: #4caf50;">Active</span></td>
                        <td style="padding: 0.5rem;"><a href="#">View</a></td>
                    </tr>
                    <tr>
                        <td style="padding: 0.5rem;">Lena Khan</td>
                        <td style="padding: 0.5rem;">lena@campuslearn.com</td>
                        <td style="padding: 0.5rem;">Student</td>
                        <td style="padding: 0.5rem;"><span style="color: #ff9800;">Pending</span></td>
                        <td style="padding: 0.5rem;"><a href="#">View</a></td>
                    </tr>
                    <tr>
                        <td style="padding: 0.5rem;">Charlie Brown</td>
                        <td style="padding: 0.5rem;">charlie@campuslearn.com</td>
                        <td style="padding: 0.5rem;">Tutor</td>
                        <td style="padding: 0.5rem;"><span style="color: #f44336;">Suspended</span></td>
                        <td style="padding: 0.5rem;"><a href="#">View</a></td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Content Moderation -->
        <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem; margin-bottom: 2rem;">
            <div style="display: flex; gap: 2rem;">
                <!-- Forum Posts -->
                <div style="flex: 1;">
                    <h5>Forum Posts</h5>
                    <div style="margin-bottom: 1rem;">
                        <div>Quantum Model Calculation</div>
                        <button class="btn btn-outline-primary btn-sm" style="margin-right: 0.5rem;">Approve</button>
                        <button class="btn btn-outline-danger btn-sm">Reject</button>
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <div>Feedback on Session Time</div>
                        <button class="btn btn-outline-primary btn-sm" style="margin-right: 0.5rem;">Approve</button>
                        <button class="btn btn-outline-danger btn-sm">Reject</button>
                    </div>
                    <div>
                        <div>Bug reported in General Discussion</div>
                        <button class="btn btn-outline-primary btn-sm" style="margin-right: 0.5rem;">Approve</button>
                        <button class="btn btn-outline-danger btn-sm">Reject</button>
                    </div>
                </div>
                <!-- Learning Materials -->
                <div style="flex: 1;">
                    <h5>Learning Materials</h5>
                    <div style="margin-bottom: 1rem;">
                        <div>Algebra Basics Lecture Notes</div>
                        <button class="btn btn-outline-primary btn-sm" style="margin-right: 0.5rem;">Approve</button>
                        <button class="btn btn-outline-danger btn-sm">Reject</button>
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <div>Advanced Physics Quiz</div>
                        <button class="btn btn-outline-primary btn-sm" style="margin-right: 0.5rem;">Approve</button>
                        <button class="btn btn-outline-danger btn-sm">Reject</button>
                    </div>
                    <div>
                        <div>Chemistry Lab Guide</div>
                        <button class="btn btn-outline-primary btn-sm" style="margin-right: 0.5rem;">Approve</button>
                        <button class="btn btn-outline-danger btn-sm">Reject</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Platform Analytics -->
        <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem; margin-bottom: 2rem;">
            <h4>Platform Analytics</h4>
            <div style="display: flex; gap: 2rem; margin-bottom: 2rem;">
                <div style="flex: 1;">
                    <div style="font-weight: bold; font-size: 1.2rem;">1,234</div>
                    <div style="color: #888;">Total Users</div>
                </div>
                <div style="flex: 1;">
                    <div style="font-weight: bold; font-size: 1.2rem;">189</div>
                    <div style="color: #888;">Active Sessions</div>
                </div>
                <div style="flex: 1;">
                    <div style="font-weight: bold; font-size: 1.2rem;">58</div>
                    <div style="color: #888;">Public Forums</div>
                </div>
                <div style="flex: 1;">
                    <div style="font-weight: bold; font-size: 1.2rem;">12</div>
                    <div style="color: #888;">Pending Approvals</div>
                </div>
            </div>
            <div style="display: flex; gap: 2rem;">
                <div style="flex: 1;">
                    <h6>User Activity</h6>
                    <img src="/images/user-activity-chart.png" alt="User Activity Chart" style="width: 100%; height: 120px; object-fit: contain; background: #f5f6fa; border-radius: 8px;" />
                </div>
                <div style="flex: 1;">
                    <h6>Platform Usage</h6>
                    <img src="/images/platform-usage-chart.png" alt="Platform Usage Chart" style="width: 100%; height: 120px; object-fit: contain; background: #f5f6fa; border-radius: 8px;" />
                </div>
            </div>
        </section>

        <!-- Platform Settings -->
        <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem; margin-bottom: 2rem;">
            <h4>Platform Settings</h4>
            <form style="max-width: 600px;">
                <div style="margin-bottom: 1rem;">
                    <label>Language</label>
                    <select class="form-control" style="margin-top: 0.5rem;">
                        <option>English</option>
                        <option>French</option>
                        <option>Dutch</option>
                    </select>
                </div>
                <div style="margin-bottom: 1rem;">
                    <label>Admin Contact Email</label>
                    <input type="email" class="form-control" style="margin-top: 0.5rem;" value="admin@campuslearn.com" />
                </div>
                <div style="margin-bottom: 1rem;">
                    <label>Enable Email Notifications</label>
                    <input type="checkbox" checked style="margin-left: 1rem;" />
                </div>
                <button class="btn btn-primary" type="submit">Save Settings</button>
            </form>
        </section>

        <!-- Notifications -->
        <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
            <h4>Notifications</h4>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="margin-bottom: 0.7rem; color: #2d7ff9;">New user registered: Lena Khan <span style="color: #888; font-size: 0.95rem;">2 hours ago</span></li>
                <li style="margin-bottom: 0.7rem; color: #2d7ff9;">Forum post pending approval <span style="color: #888; font-size: 0.95rem;">3 hours ago</span></li>
                <li style="margin-bottom: 0.7rem; color: #2d7ff9;">System update completed <span style="color: #888; font-size: 0.95rem;">5 hours ago</span></li>
                <li style="margin-bottom: 0.7rem; color: #2d7ff9;">Tutor rating submitted <span style="color: #888; font-size: 0.95rem;">1 day ago</span></li>
                <li style="margin-bottom: 0.7rem; color: #2d7ff9;">New course added: Quantum Physics <span style="color: #888; font-size: 0.95rem;">2 days ago</span></li>
            </ul>
        </section>

        <!-- Footer -->
        <footer style="margin-top: 3rem; text-align: center; color: #888; font-size: 0.95rem;">
            <div style="margin-bottom: 0.5rem;">
                Admin Home &nbsp; | &nbsp; Support &nbsp; | &nbsp; Company
            </div>
        </footer>
    </main>
</div>