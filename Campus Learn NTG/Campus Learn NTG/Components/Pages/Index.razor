@page "/"

<!-- Hero Section -->
<div class="hero-section" style="background: url('/images/hero-bg.jpg') center/cover no-repeat; min-height: 350px; display: flex; align-items: center; justify-content: center; position: relative;">
    <div class="hero-overlay" style="background: rgba(255,255,255,0.7); position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></div>
    <div class="hero-content" style="position: relative; z-index: 1; text-align: center; max-width: 700px; margin: auto;">
        <h1 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem;">Welcome to Campus Learn:<br />Your Hub for Collaborative Education</h1>
        <p style="font-size: 1.2rem; margin-bottom: 1.5rem;">
            Unlock your potential with personalized learning experiences, expert tutors, and a vibrant student community. Join us to learn, grow, and succeed together.
        </p>
        <a href="/signup" class="btn btn-primary" style="padding: 0.75rem 2rem; font-size: 1.1rem; border-radius: 6px;">Start Your Learning Journey</a>
    </div>
</div>

<!-- Why Choose Section -->
<section style="padding: 3rem 0; text-align: center;">
    <h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 2rem;">Why Choose CampusLearn?</h2>
    <div class="features-row" style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
        <div class="feature-card" style="background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem; width: 260px;">
            <div style="font-size: 2rem; color: #6c63ff; margin-bottom: 1rem;">
                <span class="bi bi-journal-bookmark"></span>
            </div>
            <h4 style="font-weight: bold;">Expert-Led Courses</h4>
            <p style="font-size: 0.98rem;">Access a vast library of courses taught by certified professionals and experienced educators.</p>
        </div>
        <div class="feature-card" style="background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem; width: 260px;">
            <div style="font-size: 2rem; color: #6c63ff; margin-bottom: 1rem;">
                <span class="bi bi-people"></span>
            </div>
            <h4 style="font-weight: bold;">Vibrant Community</h4>
            <p style="font-size: 0.98rem;">Connect with peers, collaborate on projects, and engage in public forums to enhance your learning.</p>
        </div>
        <div class="feature-card" style="background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem; width: 260px;">
            <div style="font-size: 2rem; color: #6c63ff; margin-bottom: 1rem;">
                <span class="bi bi-calendar-check"></span>
            </div>
            <h4 style="font-weight: bold;">Flexible Scheduling</h4>
            <p style="font-size: 0.98rem;">Book one-on-one sessions with tutors at your convenience, designed to fit your busy lifestyle.</p>
        </div>
    </div>
</section>

<!-- Portal Access Section -->
<section style="padding: 3rem 0; text-align: center;">
    <h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 2rem;">Access Your CampusLearn Portal</h2>
    <div class="portal-row" style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
        <div class="portal-card" style="background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem; width: 260px;">
            <div style="font-size: 2rem; color: #6c63ff; margin-bottom: 1rem;">
                <span class="bi bi-person"></span>
            </div>
            <h4 style="font-weight: bold;">Student Login</h4>
            <p style="font-size: 0.98rem;">Access your courses, schedule, and learning materials.</p>
            <a href="/login" class="btn btn-outline-primary" style="margin-top: 1rem; width: 100%;">Login as Student</a>
        </div>
        <div class="portal-card" style="background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem; width: 260px;">
