@page "/studentdashboard"

<div class="dashboard-container" style="display: flex; min-height: 100vh; background: #fafbfc;">
    <!-- Sidebar -->
    <aside class="dashboard-sidebar" style="width: 220px; background: #fff; border-right: 1px solid #e5e7eb; padding: 2rem 1rem;">
        <h4 style="margin-bottom: 2rem; color: #2d7ff9;">Student Menu</h4>
        <nav>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-house-door"></span> Dashboard Home</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-person"></span> My Profile</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-calendar"></span> Course Schedule</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-journal-text"></span> Learning Materials</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-chat-dots"></span> Messaging</li>
                <li style="margin-bottom: 1.2rem;"><span class="bi bi-people"></span> Public Forum</li>
            </ul>
        </nav>
        <div style="margin-top: 2rem; color: #888;">
            <span class="bi bi-gear"></span> Settings
        </div>
        <div style="position: absolute; bottom: 1rem; left: 1rem; color: #b0b0b0; font-size: 0.95rem;">
            CampusLearn
        </div>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-main" style="flex: 1; padding: 2rem;">
        <!-- Top Bar -->
        <div class="dashboard-topbar" style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 1.5rem;">
            <nav style="margin-right: auto;">
                <a href="/" style="margin-right: 2rem;">Home</a>
                <a href="/sighup" style="margin-right: 2rem;">Register</a>
                <a href="#" style="margin-right: 2rem;">Courses</a>
                <a href="#" style="margin-right: 2rem;">Messages</a>
            </nav>
            <button class="btn btn-outline-danger" style="margin-right: 1rem;">Logout</button>
            <span class="bi bi-person-circle" style="font-size: 1.7rem; color: #2d7ff9;"></span>
        </div>

        <!-- Dashboard Title -->
        <h2 style="color: #2d7ff9; margin-bottom: 2rem;">Student Dashboard:</h2>

        <!-- Dashboard Grid -->
        <div class="dashboard-grid" style="display: grid; grid-template-columns: 1.2fr 1fr 1fr; gap: 2rem;">
            <!-- Welcome Card -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h3>Welcome, Alex Johnson!</h3>
                <p style="color: #888;">Overview of your progress and activities.</p>
                <div style="display: flex; align-items: center; margin: 1.5rem 0;">
                    <div style="width: 80px; height: 80px; border-radius: 50%; background: #eaf0fe; display: flex; align-items: center; justify-content: center; font-size: 2.5rem; color: #2d7ff9; margin-right: 1.5rem;">
                        <span class="bi bi-person"></span>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Alex Johnson</div>
                        <div style="font-size: 0.95rem; color: #888;">Student ID: 512346</div>
                        <div style="font-size: 0.95rem; color: #888;">Status: Active</div>
                    </div>
                </div>
                <div style="font-size: 0.95rem; color: #888; margin-bottom: 0.5rem;">Overall Progress: 75%</div>
                <div style="background: #eaf0fe; border-radius: 6px; height: 8px; width: 100%;">
                    <div style="background: #2d7ff9; height: 8px; border-radius: 6px; width: 75%;"></div>
                </div>
            </section>

            <!-- Upcoming Sessions -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Upcoming Sessions</h4>
                <p style="color: #888; font-size: 0.95rem;">Your next classes and appointments.</p>
                <div style="margin-top: 1rem;">
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Advanced Calculus</div>
                        <div style="font-size: 0.95rem; color: #888;">Dr. Emily White - Oct 26, 10:00 AM</div>
                        <button class="btn btn-primary btn-sm" style="margin-top: 0.5rem;">Join Session</button>
                    </div>
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Literary Analysis</div>
                        <div style="font-size: 0.95rem; color: #888;">Prof. Ben Carter - Oct 27, 02:00 PM</div>
                        <button class="btn btn-primary btn-sm" style="margin-top: 0.5rem;">Join Session</button>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Quantum Physics I</div>
                        <div style="font-size: 0.95rem; color: #888;">Dr. Lena Khan - Oct 28, 11:00 AM</div>
                        <button class="btn btn-primary btn-sm" style="margin-top: 0.5rem;">Join Session</button>
                    </div>
                </div>
            </section>

            <!-- Learning Materials -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Learning Materials</h4>
                <p style="color: #888; font-size: 0.95rem;">Access your course resources.</p>
                <div style="margin-top: 1rem;">
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Calculus III Notes - Chapter 5</div>
                        <div style="font-size: 0.95rem; color: #888;">Type: PDF</div>
                        <a href="#" class="btn btn-link btn-sm" style="padding: 0;">View</a>
                    </div>
                    <div style="margin-bottom: 1.2rem;">
                        <div style="font-weight: bold;">Shakespeare Sonnets Analysis - Handout</div>
                        <div style="font-size: 0.95rem; color: #888;">Type: PDF</div>
                        <a href="#" class="btn btn-link btn-sm" style="padding: 0;">View</a>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Physics Equations - Cheat Sheet</div>
                        <div style="font-size: 0.95rem; color: #888;">Type: PDF</div>
                        <a href="#" class="btn btn-link btn-sm" style="padding: 0;">View</a>
                    </div>
                </div>
            </section>
        </div>

        <!-- Second Row -->
        <div class="dashboard-grid" style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 2rem; margin-top: 2rem;">
            <!-- Recent Messages -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Recent Messages</h4>
                <p style="color: #888; font-size: 0.95rem;">Your latest chats and discussions.</p>
                <div style="margin-top: 1rem;">
                    <div style="display: flex; align-items: center; margin-bottom: 1.2rem;">
                        <span class="bi bi-person-circle" style="font-size: 1.5rem; color: #2d7ff9; margin-right: 0.7rem;"></span>
                        <div>
                            <div style="font-weight: bold;">Dr. Emily White</div>
                            <div style="font-size: 0.95rem; color: #888;">Reminder for tomorrow's session.</div>
                            <div style="font-size: 0.85rem; color: #b0b0b0;">2 hours ago</div>
                        </div>
                    </div>
                    <div style="display: flex; align-items: center; margin-bottom: 1.2rem;">
                        <span class="bi bi-people" style="font-size: 1.5rem; color: #4caf50; margin-right: 0.7rem;"></span>
                        <div>
                            <div style="font-weight: bold;">Study Group Physics</div>
                            <div style="font-size: 0.95rem; color: #888;">Anyone free to meet for the project?</div>
                            <div style="font-size: 0.85rem; color: #b0b0b0;">30 mins ago</div>
                        </div>
                    </div>
                    <div style="display: flex; align-items: center;">
                        <span class="bi bi-person-circle" style="font-size: 1.5rem; color: #ff9800; margin-right: 0.7rem;"></span>
                        <div>
                            <div style="font-weight: bold;">Prof. Ben Carter</div>
                            <div style="font-size: 0.95rem; color: #888;">Your essay draft feedback is ready.</div>
                            <div style="font-size: 0.85rem; color: #b0b0b0;">1 day ago</div>
                        </div>
                    </div>
                </div>
                <a href="#" style="display: block; margin-top: 1rem; color: #2d7ff9; font-size: 0.95rem;">View All Messages</a>
            </section>

            <!-- Community Forum -->
            <section class="dashboard-card" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem;">
                <h4>Community Forum</h4>
                <p style="color: #888; font-size: 0.95rem;">Connect with peers and instructors.</p>
                <div style="display: flex; flex-direction: column; align-items: center; margin-top: 2rem;">
                    <span class="bi bi-chat-dots" style="font-size: 2.5rem; color: #2d7ff9; margin-bottom: 1rem;"></span>
                    <p style="font-size: 0.98rem; color: #888; text-align: center;">Engage in discussions, ask questions, and share knowledge.</p>
                    <a href="#" class="btn btn-primary" style="margin-top: 1rem;">Go to Forum</a>
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer style="margin-top: 3rem; text-align: center; color: #888; font-size: 0.95rem;">
            <div style="margin-bottom: 0.5rem;">
                Quick Links &nbsp; | &nbsp; Support &nbsp; | &nbsp; Company
            </div>
            <div>
                <span class="bi bi-facebook" style="margin-right: 0.5rem;"></span>
                <span class="bi bi-twitter" style="margin-right: 0.5rem;"></span>
                <span class="bi bi-instagram" style="margin-right: 0.5rem;"></span>
                <span class="bi bi-linkedin"></span>
            </div>
        </footer>
    </main>
</div>